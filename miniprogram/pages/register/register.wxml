<view class="container">
    <view class="lic-tmpl" wx:if="{{!licImgURL}}" bindtap="onUploadLic">
        <image class="lic-tmpl-img stretch" src="/resources/lic.png" />
        <view class="cuIcon-camerafill lg text-gray"></view>
        <view class="instruction">请上传驾驶证照片</view>
    </view>
<block wx:else>
        <view class="lic-tmpl">
            <image class="stretch" src="{{licImgURL}}" />
            <image wx:if="{{state ==='VERIFIED'}}" class="check" src="/resources/check.png" />
        </view>

        <view calss="lic-from margin-top-xl">
            <view class="cu-form-group">
		        <view class="title">驾驶证号</view>
		        <input placeholder="驾驶证号" value="{{licNo}}" disabled="{{state !== 'UNSUBIMTTED'}}"></input>
	        </view>
            <view class="cu-form-group">
		        <view class="title">姓名</view>
		        <input placeholder="姓名" value="{{name}}" disabled="{{state !== 'UNSUBIMTTED'}}"></input>
	        </view>

            <view class="cu-form-group">
		        <view class="title">性别</view>
	            <picker bindchange="onGenderChange" value="{{gendersIndex}}" range="{{genders}}" disabled="{{state !== 'UNSUBIMTTED'}}">
			    <view class="picker">
				    {{genders[gendersIndex]}}
			    </view>
		        </picker>
	        </view>

            <view class="cu-form-group">
		        <view class="title">出生日期</view>
		        <picker mode="date" value="{{birthDate}}" bindchange="onBirthDateChange" disabled="{{state !== 'UNSUBIMTTED'}}">
			    <view class="picker">
				    {{birthDate}}
			    </view>
		        </picker>
	        </view>

        </view>

        <button wx:if="{{state === 'UNSUBIMTTED'}}" class="cu-btn bg-red lg margin-top-xl" bindtap="onSubmit">
            递交审核
        </button>
        <button wx:if="{{state==='PENDING'}}" class="cu-btn block line-blue margin-top-xl lg" disabled>
            审查中
        </button>
        <button wx:if="{{state === 'VERIFIED'}}" class="cu-btn bg-red lg margin-top-xl" bindtap="onResubmit">
                重新递交
        </button>

</block>    
</view>    
